  </script>

  <style>
    a:link {text-decoration: none; color: midnightblue;}
    a:visited {text-decoration: none; color: midnightblue;}
    a:active {text-decoration: none; color: midnightblue;}
    a:hover {text-decoration: none; color: midnightblue;}

    header{
        font-size: 50px;
        margin: 10px 5px;
        padding: 10px 5px;
        border: 1px solid #730E15;
    }

    section {
        border: 1px solid black;
        border-radius: 10px;
    }

    .section_title {
        margin: 10px 5px;
        padding: 50px 5px;
        font-size: 40px;
    }

    .section_title img{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    article{
        border: 1px solid saddlebrown ;
        border-radius: 10px;
        margin: 10px 5px;
        padding: 10px 5px;
    }

    .thum_image img {
        width: 100%;
    }


    .btn{
        border: 1px solid chocolate;
        padding: 2px;
    }

    .article_controler{
        /*border: 1px solid palevioletred;*/
        margin: 5px 0 5px 0;
    }

    li {
        list-style: none;
    }

    footer {
        border: 1px solid saddlebrown ;
        border-radius: 5px;
        margin: 10px 5px;
        padding: 10px 5px;
    }
  </style>

