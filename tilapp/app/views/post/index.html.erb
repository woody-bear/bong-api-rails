<body>
<h1>글목록</h1>

<div><%= link_to '새글작성', new_post_path %></div>
<p>
    <% @posts.each do |post| %>
    <div class="main">
        <div> <%= post.til_id %> </div>
        <div> <%= post.title %> </div>
        <div> <%= post.user_id %> </div>
        <div> <%= post.content %> </div>
        <div> 생성일 <%= post.created_at&.strftime('%Y-%m-%d') %> </div>
        <%= link_to '상세보기', post_path(post) %>
        <%= link_to '수정하기', edit_post_path(post) %>
        <%#= link_to '삭제하기', use_yn_post_path(post) %>
    </div>
    <% end %>
</p>
</body>