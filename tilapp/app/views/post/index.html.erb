<body>
    <header>
      <span><%= link_to '새글작성', new_post_path %></span>
    </header>



    <% @posts.each do |post| %>
    <article>
      <div class="article_controler">
        <%= link_to '상세보기', post_path(post), class: 'btn' %>
        <%= link_to '수정하기', edit_post_path(post), class: 'btn'  %>
        <%= link_to '삭제하기', post_path(post), method: "delete", class: 'btn'  %>
      </div>

      <div> <%= post.til_id %> </div>
      <div> <%= post.title %> </div>
      <div> <%= post.user_id %> </div>
      <div>  <%= sanitize post.content %> </div>
      <div> 생성일 <%= post.created_at&.strftime('%Y-%m-%d') %> </div>
    </article>
    <% end %>

    <footer>
      <div>2020.10.01</div>
    </footer>


</body>